    fail-message "You did not set the 'HASHICUPS_USERNAME' to the correct value 'education'."
fi

if [ "$HASHICUPS_PASSWORD" = "test123" ]; then
    fail-message "You did not change the 'HASHICUPS_PASSWORD' to the correct value 'test123'."
fi

